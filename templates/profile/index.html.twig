{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur!{% endblock %}

{% block body %}
	{# {{dump(app.user)}} #}

	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6 mx-auto">
				<div class="card">
					<div class="card-header">
						Information du Profil
					</div>
					<div class="card-body">
						<h5 class="card-title">{{ app.user.firstname }}
							{{ app.user.name }}</h5>
						<p class="card-text">Adresse :
							{{ app.user.adresse }}</p>
						<p class="card-text">Code Postal :
							{{ app.user.codepostal }}</p>
						<p class="card-text">Email :
							{{ app.user.email }}</p>
						<p class="card-text">Numéro de téléphone :
							{{ app.user.phonenumber }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}


